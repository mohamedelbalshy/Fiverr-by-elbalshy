<div class="cotnaier">
    <h1 class="text-center">My Gigs</h1>
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="overview">
                <div class="add-gig-card">
                    <p class="text-center" style="margin-top:40px;">
                        <a href="/add-new-gig" class="btn btn-success btn-lg">Add a New Gig</a>
                    </p>
                </div>
            </div>

            <div class="overview">
                <div class="list-orders-card">
                    <div class="table-margin">

                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Gig</th>
                                    <th>Title</th>
                                    <th>About</th>
                                    <th>Price</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each gigs}}
                                <tr>
                                    <td><img src="{{picture}}" class="order-image-my-gig"></td>
                                    <td>{{title}}</td>
                                    <td>{{about}}</td>
                                    <td>${{price}} </td>
                                    <td><a href="/edit-gig/{{_id}}" class="btn btn-success btn-sm">Edit</a></td>
                                    <td> 
                                        
                                        <!-- Trigger the modal with a button -->
                                        <button type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#myModal">Delete</button>
                                    
                                        <!-- Modal -->
                                        <div class="modal fade" id="myModal" role="dialog">
                                            <div class="modal-dialog">
                                    
                                                <!-- Modal content-->
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                        <h4 class="modal-title">Delete Gig</h4>
                                                    </div>
                                                    <div class="modal-body">
                                                        <p>Are you sure you want to delete this Gig?</p>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <input type="hidden" name="hidden" id="gigId" value="{{_id}}">
                                                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                                        <button type="button" class="btn btn-default" data-dismiss="modal" id="delete_gig">Delete</button>
                                                    </div>
                                                </div>
                                    
                                            </div>
                                        </div>
                                    
                                    </td>
                                </tr>
                                
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>