<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="overview">
                <h2 class="text-center">Enter your gig details</h2>
                <br/>
                <div class="new-gig-card">
                    <form method="post" action="/edit-gig/{{gig._id}}">
                        <div class="form-group">
                            <label>Gig title</label>
                            <input type="hidden" id="gigId" value="{{gig._id}}">
                            <input type="text" id="edit_gig_title" class="form-control" placeholder="I will do something" name="title" required value= "{{gig.title}}">
                        </div>


                        <div class="form-group">
                            <label>Gig price</label>
                            <input type="text" id="edit_gig_price" class="form-control" placeholder="$3" name="price" required min="0" value={{gig.price}}>
                        </div>

                        <div class="form-group">
                            <label>Gig category</label>
                            <select name="category" id="edit_gig_category" class="form-control">
                                <option value="programming">Programming</option>
                                <option value="website">Website</option>
                                <option value="design">Design</option>
                                <option value="marketing">Marketing</option>
                            </select>
                        </div>

                        <div class="form-group input-group-lg">
                            <label>Gig about</label>
                            <input type="text" id="edit_gig_about" class="form-control" placeholder="Describe your gig" name="about" required value="{{gig.about}}">
                        </div>

                        <button type="submit" id="edit_gig" class="btn btn-success btn-lg">Update</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>