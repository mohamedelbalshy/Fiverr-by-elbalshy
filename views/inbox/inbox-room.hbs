<div class="contianer">
    <div class="app row clearfix" style=" padding-left:100px; padding-right:100px;">


        <div class="col-sm-4 ">
            <input type="hidden" id="inboxUserID" value="{{inboxUser._id}}" />
            <input type="hidden" id="userId" value="{{user._id}}" />
            <div class="row">
                <div class="sidebar right">
                    <div class="overlay">
                        <div class="profile">
                            <div class="pic">
                                <img src="{{inboxUser.photo}}" alt="" class="center-block img-responsive">
                            </div>
                            <div class="info">
                                <h3 class="title name " >{{inboxUser.name}}</h3>
                                <h3 class="title name"> {{inboxUser.about}}</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="col-sm-8">
            <div class="row">
                <div class="chatbox">

                    <div class="chat-msgs clearfix" id="chatMsgs">
                        {{#each user.messages}} {{#if_equals ../user._id owner._id }}
                        <div class="message right">
                            <span class="pic">
                                <img src="{{owner.photo}}" />
                            </span>
                            <div class="bubble right">
                                <p>{{content}}</p>
                            </div>
                        </div>
                        {{else}}
                        <div class="message left">
                            <span class="pic">
                                <img src="{{owner.photo}}" />
                            </span>
                            <div class="bubble left">
                                <p>{{content}}</p>
                            </div>
                        </div>
                        {{/if_equals}} {{/each}}
                    </div>

                    <div class="compose">
                        <form action="#" id="sendMessage" class="form-group">
                            <div class="input-group">
                                <a href="#" class="input-group-addon">
                                    <i class="fa fa-plus"></i>
                                </a>
                                <input type="text" class="form-control" id="message" placeholder="Type something here">
                                <a href="#" class="input-group-addon">
                                    <i class="fa fa-smile-o"></i>
                                </a>
                                <input type="submit" value="Send" class="form-control">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>


    </div>
</div>